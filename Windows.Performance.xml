									</ValueExpression>
									<Operator>LessEqual</Operator>
									<ValueExpression>
										<Value Type="Double">$Config/Threshold$</Value>
									</ValueExpression>
								</SimpleExpression>
							</Expression>
							<SuppressionSettings>
								<MatchCount>$Config/MatchCount$</MatchCount>
							</SuppressionSettings>
						</ConditionDetection>
						<ConditionDetection ID="CDFreeMemoryGood" TypeID="System!System.ExpressionFilter">
							<Expression>
